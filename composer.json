{
  "name": "krzysztof-gzocha/searcher-bundle",
  "description": "Bridge between searcher and Symfony2 framework",
  "type": "library",
  "authors": [
    {
      "name": "Krzysztof Gzocha"
    }
  ],
  "minimum-stability": "dev",
  "suggest": {
    "doctrine/orm": "to use with Doctrine's ORM",
    "doctrine/mongodb-odm": "to use with Doctrine's ODM",
    "knplabs/knp-paginator-bundle": "to use with Knp Paginator bundle"
  },
  "config": {
    "bin-dir": "bin",
    "vendor-dir": "vendor"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "require":{
    "php": ">=5.4",
    "symfony/symfony": "^2.0",
    "krzysztof-gzocha/searcher": "dev-master@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.10",
    "phing/phing": "^2.13@dev",
    "phpmd/phpmd": "dev-master",
    "doctrine/orm": "^2.0",
    "doctrine/mongodb-odm": "^1.0",
    "knplabs/knp-paginator-bundle": "^2.5",
    "fabpot/php-cs-fixer": "dev-master"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:krzysztof-gzocha/searcher.git"
    }
  ]
}
